#!/bin/bash
#helm-deploy

set -eo pipefail

. k8s-read-config
. k8s-deploy-secrets

echo "Deploying Helm Charts"
for index in "${!HELM_CHARTS[@]}"
do

  CHART_PATH=${HELM_CHARTS[$index]}
  CHART_RELEASE_NAME=${HELM_RELEASE_NAMES[$index]:-$CHARTS[$index]}
  CHART_VALUES=${HELM_VALUES[$index]}
  echo "Applying ${CHART_PATH} with ${CHART_VALUES} in namespace ${NAMESPACE} with SHA ${CI_SHA1}"
  helm upgrade --install "${CHART_RELEASE_NAME}" "./deploy/${CHART_PATH}" -f "./deploy/${CHART_VALUES}.values.yml" --set image.tag="${CI_SHA1}" --namespace="${NAMESPACE}"

done
echo "Done deploying Helm Charts"
echo ""


